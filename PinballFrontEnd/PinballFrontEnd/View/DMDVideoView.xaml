<Window x:Class="PinballFrontEnd.View.DMDVideoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PinballFrontEnd.View"
        mc:Ignorable="d"
        Title="DMDVideoView"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Black"
        Height="{Binding MediaLocation.DMDSizeY, Mode=TwoWay}"
        Width="{Binding MediaLocation.DMDSizeX, Mode=TwoWay}"
        Left="{Binding MediaLocation.DMDLocationX, Mode=TwoWay}"
        Top="{Binding MediaLocation.DMDLocationY, Mode=TwoWay}"
        Visibility="{Binding MediaLocation.DMDVisable, Converter={StaticResource BooleanToVisibilityConverter}, Mode=TwoWay}">
    <Grid>
        <MediaElement 
            x:Name="DMDMedia"
            Source="{Binding CurrentTable.DMD}" 
            LoadedBehavior="Manual" 
            IsMuted="True"
            Loaded="DMDMediaRepeat"
            MediaEnded="DMDMediaRepeat">

            <MediaElement.LayoutTransform>
                <TransformGroup>
                    <RotateTransform Angle="{Binding MediaLocation.DMDRotation}" />
                </TransformGroup>
            </MediaElement.LayoutTransform>

        </MediaElement>
    </Grid>

</Window>
